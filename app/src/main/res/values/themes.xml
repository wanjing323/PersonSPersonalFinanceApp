<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Person" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DateDialogThemeExpenses" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/bone_dark_2</item>
    </style>

    <style name="DateDialogThemeIncome" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_purple_2</item>
    </style>

    <style name="DateDialogThemeExpensesTransaction" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/transaction1</item>
    </style>

</resources>